<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UPCLICK LABS</title>
    <link rel="stylesheet" type="text/css" href="login2.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
</head>
<body>
    <img class="wave" src="wave2.png">
    <div class="container">
        <div class="img">
            <img src="home2.png">
        </div>
        <div class="login-content">
            <form id="login-form" action="/login" method="POST">
                <img src="avatar3.svg">
                <h2 class="title">
                    <p id="para">Welcome<br>Log In!</p>
                </h2>
                <%- include('../partials/errmessg.ejs') %>
                <div id="mesg"></div>

                <!-- Email Input -->
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Mail Id</h5>
                        <input type="email" class="input" name="email" required>
                    </div>
                </div>

                <!-- Password Input -->
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div" id="eyed">
                        <h5>Password</h5>
                        <input type="password" class="input" id="cred1" name="password" required>
                        <button id="eye" onclick="togglePasswordVisibility(event)">
                            <i class="fa fa-eye"></i>
                        </button>
                    </div>
                </div>
                <a id="forgot" href="#">Forgot Password?</a>
                <a id="create" href="/register">Create Account?</a>
                <button type="submit" class="btn">Login</button>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="main.js"></script>
	<script>
		fetch('/login', {
  method: 'POST',
   headers: {
    'Content-Type': 'application/json'
  }
})
  .then(response => response.json())
  .then(data => {
    const token = data.token;
     console.log("mainy")
    // Store the token in the browser's local storage or session storage
    localStorage.setItem('token', token);

    // Redirect to the home page or perform other actions
    window.location.href = '/home';
  })
  .catch(error => {
    // Handle any errors that occurred during the login request
    console.error(error);
  });

	</script>
</body>
</html>