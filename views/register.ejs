<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Nextwave</title>
    <link rel="stylesheet" type="text/css" href="login2.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&amp;display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <img class="wave" src="wave2.png">
    <div class="container">
        <div class="img">
            <img src="home2.png">
        </div>
        <div class="login-content">
            <form action="/register" method="POST">
                <img src="avatar3.svg">
                <h2 class="title"><p id="para">Get on Board!</p></h2>
                <div><%- include('../partials/errmessg.ejs') %></div>

                <!-- Username Field -->
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username</h5>
                        <input type="text" class="input" name="name" required>
                    </div>
                </div>

                <!-- Email Field -->
                <div class="input-div two">
                    <div class="i">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="div">
                        <h5>Mail id</h5>
                        <input type="email" class="input" name="email" required>
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input type="password" class="input" id="cred1" name="password" required>
                        <button id="eye" onclick="togglePasswordVisibility()"> <i class="fa fa-eye"></i></button>
                    </div>
                </div>

                <!-- Age Field -->
                <div class="input-div age">
                    <div class="i">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="div">
                        <h5>Age</h5>
                        <input type="number" class="input" name="age" required min="18">
                    </div>
                </div>
                <div class="input-div dob">
                    <div class="i">
                        <i class="fas fa-birthday-cake"></i>
                    </div>
                    <div class="div" aria-placeholder="Date of Birth">
                        <h5></h5>
                        <input type="date" class="input" name="dob" required>
                    </div>
                </div>

                <!-- Company Name Field -->
                <div class="input-div company">
                    <div class="i">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="div">
                        <h5>Company Name</h5>
                        <input type="text" class="input" name="companyName" required>
                    </div>
                </div>

                <!-- Logo (Image Upload) Field -->
                <!-- <div class="input-div logo">
                    <div class="i">
                        <i class="fas fa-upload"></i>
                    </div>
					
                    <div class="div" aria-placeholder="Upload Company Logo">
                        <h5></h5>
                        <input type="file" class="input" name="image" accept="image/png, image/jpeg" required>
                    </div>
                </div> -->

                <button id="forgot"><a href="/login" style="color: blue;">Already have an account?</a></button>
                <input type="submit" class="btn" value="Register">

                By clicking Continue, you agree to our <a href="#" style="color: blue;">Terms & Conditions</a> and <a href="#" style="color: blue;">Privacy Policy</a>
            </form>
        </div>
    </div>

    <script type="text/javascript" src="main.js"></script>
</body>
</html>
